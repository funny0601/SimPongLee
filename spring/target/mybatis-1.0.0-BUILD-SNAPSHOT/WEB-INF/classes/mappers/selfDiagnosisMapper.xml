<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.selfDiagnosisMapper">

	<!-- 
		mybatis-config.xml의 typeAlias에 등록해두지 않았다면 
		
		<select id="selectMember" resultType="com.example.dto.MemberVO" >
			SELECT ID, PW ,NAME FROM TEST
		</select>
		
		이렇게 해야 한다.
	-->

	<select id="selectQuestion" parameterType="hashmap" resultType="hashmap">
		SELECT question FROM selfDiagnosisQuestion
		WHERE categoryid = #{categoryid}
	</select>

	<select id="selectLevel" parameterType="hashmap" resultType="hashmap">
		SELECT selfDiagnosisLevel FROM selfDiagnosisResult
		WHERE userid = #{userid} AND categoryid = #{categoryid}
	</select>

<!--	<select id="selectUserScoreExists" parameterType="hashmap" resultType="hashmap">-->
<!--		SELECT EXISTS( SELECT * FROM selfDiagnosisResult WHERE userid = #{userid} AND categoryid = #{categoryid}) AS exist;-->
<!--	</select>-->

	<select id="insertDiagnosisResult" parameterType="hashmap" resultType="hashmap">
		INSERT INTO selfDiagnosisResult(userid, categoryid, selfDiagnosisScore, selfDiagnosisLevel)
		VALUES (#{userid}, #{categoryid}, #{selfDiagnosisScore}, #{selfDiagnosisLevel})
	</select>
</mapper>