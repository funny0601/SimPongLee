<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:fontFamily="@font/handotum"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:text="질문 문항은 여기에" />


        <RadioGroup
            android:id="@+id/testAnswerGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/scoreRadio4"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:lrb_inAnimDuration="0"
                    app:lrb_outAnimDuration="0"
                    app:lrb_strokeWidth="3dp"
                    app:lrb_outterPadding="8dp"
                    app:lrb_innerCircleRadius="18dp"
                    app:lrb_strokeRadius="23dp"
                    app:lrb_checkedColor="@color/colorPrimaryDark"
                    app:lrb_unCheckedColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/handotum"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="매우 그렇다">
                </TextView>
            </LinearLayout>
        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:layout_width="wrap_content"
            android:id="@+id/scoreRadio3"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:lrb_inAnimDuration="0"
            app:lrb_outAnimDuration="0"
            app:lrb_strokeWidth="3dp"
            android:layout_marginRight="30dp"
            app:lrb_outterPadding="8dp"
            app:lrb_innerCircleRadius="18dp"
            app:lrb_strokeRadius="23dp"
            app:lrb_checkedColor="@color/colorPrimaryDark"
            app:lrb_unCheckedColor="@color/colorPrimaryDark"
            />

        <me.omidh.liquidradiobutton.LiquidRadioButton
            android:layout_width="wrap_content"
            android:id="@+id/scoreRadio2"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:lrb_inAnimDuration="0"
            app:lrb_outAnimDuration="0"
            app:lrb_strokeWidth="3dp"
            android:layout_marginRight="30dp"
            app:lrb_outterPadding="8dp"
            app:lrb_innerCircleRadius="18dp"
            app:lrb_strokeRadius="23dp"
            app:lrb_checkedColor="@color/colorPrimaryDark"
            app:lrb_unCheckedColor="@color/colorPrimaryDark"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <me.omidh.liquidradiobutton.LiquidRadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/scoreRadio1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:lrb_inAnimDuration="0"
                    app:lrb_outAnimDuration="0"
                    app:lrb_strokeWidth="3dp"
                    app:lrb_outterPadding="8dp"
                    app:lrb_innerCircleRadius="18dp"
                    app:lrb_strokeRadius="23dp"
                    app:lrb_checkedColor="@color/colorPrimaryDark"
                    app:lrb_unCheckedColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/handotum"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="전혀 아니다">
                </TextView>
            </LinearLayout>
        </RadioGroup>

</LinearLayout>
